<Ragsy_Gyro_Better_Gyro_handling>

	<!-- Better takes offs and landing , more stabilty and lighter feeling better steering and better 3rd person view-->
	
	<set xpath="/vehicles/vehicle[@name='vehicleGyrocopter']/property[@name='cameraDistance' and @value='6, 8']/@value">5.4, 5.4</set>
	<set xpath="/vehicles/vehicle[@name='vehicleGyrocopter']/property[@name='cameraTurnRate' and @value='.2, .35']/@value">0.4, 0.45</set> 
	
	
	<set xpath="/vehicles/vehicle[@name='vehicleGyrocopter']/property[@name='motorTorqueMinQ']/@value">2000</set>
	<set xpath="/vehicles/vehicle[@name='vehicleGyrocopter']/property[@name='motorTorqueMaxQ']/@value">3000</set>
	<set xpath="/vehicles/vehicle[@name='vehicleGyrocopter']/property[@name='brakeTorque']/@value">4000</set>
	
	
	<set xpath="/vehicles/vehicle[@name='vehicleGyrocopter']/property[@name='steerRate']/@value">70</set>
	<set xpath="/vehicles/vehicle[@name='vehicleGyrocopter']/property[@name='steerCenteringRate']/@value">2</set>
	
	<set xpath="/vehicles/vehicle[@name='vehicleGyrocopter']/property[@name='tiltAngleMax']/@value">4</set>
	
	<set xpath="/vehicles/vehicle[@name='vehicleGyrocopter']/property[@name='upAngleMax']/@value">15</set>
	<set xpath="/vehicles/vehicle[@name='vehicleGyrocopter']/property[@name='upForce']/@value">0.55</set>
	
	<set xpath="/vehicles/vehicle[@name='vehicleGyrocopter']/property[@name='velocityMax']/@value">18, 30</set>
	<set xpath="/vehicles/vehicle[@name='vehicleGyrocopter']/property[@name='airDrag_velScale_angVelScale']/@value">.993, .93</set>
	
	
</Ragsy_Gyro_Better_Gyro_handling>